<!DOCTYPE html>
<html>
  <head>
    <title>TravelTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <%# nav-bar %>
    <div class='nav-bar'>
      <a href='<%=root_path%>'><img class='logo' src='/assets/logo.png'></a>
        <%if logged_in?%>
        <%= link_to "Main", agencies_main_path(current_user), class: 'btn right'%>
        <%= link_to "Log Out", logout_path, class: 'btn right' %>
      <% else %>
        <%= link_to "Log In", login_path, class: 'btn right' %>
        <%= link_to "Sign Up", signup_path, class: 'btn right'%>
      <% end %>
      <%= link_to "Browse all tours", tours_path, class: 'btn right' %>
    </div>
    <%# flash messages if any %>
    <div class='red center'>
      <% flash.each do |key, value| %>
        <div><%= value %></div>
      <% end %>
    </div>
  
    <%# <div id='main'> %>
      <%= yield %>
    <%# </div> %>
    
  </body>
</html>
